<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.smth.androidware.activities.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:id="@+id/goToToolbarBtn"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Toolbar Activity"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/goToRecyclerViewBtn"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Recycler View Activity"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/goToNavigationDrawer"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Navigation Drawer Activity"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/goToAnimations"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Animations Activity"
            android:layout_weight="1"/>


    </LinearLayout>


</RelativeLayout>
